<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:contentPadding="4dp"
        app:cardCornerRadius="8dp"
        style="?attr/materialCardViewElevatedStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/taskNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textAppearance="?attr/textAppearanceTitleLarge" />

            <TextView
                android:id="@+id/taskDescriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/taskStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskPriorityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginEnd="12dp"
                    android:text="Priority"
                    android:textAppearance="?attr/textAppearanceBodySmall" />

                <TextView
                    android:id="@+id/taskDueDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginEnd="12dp"
                    android:text="Due Date"
                    android:textAppearance="?attr/textAppearanceBodySmall" />

                <TextView
                    android:id="@+id/taskLocationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginEnd="12dp"
                    android:text="Location"
                    android:textAppearance="?attr/textAppearanceBodySmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_check_24"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/baseline_check_24"
                    app:backgroundTint="@color/design_default_color_secondary_variant" />

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_mode_edit_24"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/baseline_mode_edit_24" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_delete_forever_24"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/baseline_delete_forever_24"
                    app:backgroundTint="@color/design_default_color_error" />

                <Button
                    android:id="@+id/alarmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:drawableLeft="@drawable/baseline_alarm_24"
                    style="?attr/materialButtonOutlinedStyle"
                    app:icon="@drawable/baseline_alarm_add_24"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@color/design_default_color_primary_variant" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
